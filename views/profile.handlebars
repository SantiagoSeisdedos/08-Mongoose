  {{! LEFT DATA }}
  <div id="profileInfo">

    <div>
      <label for="name">Nombre: <span id="name"></span></label>
    </div>

    <div>
      <label for="lastName">Apellido: <span id="lastName"></span></label>
    </div>

    <div>
      <label for="email">Correo Electr√≥nico: <span id="email"></span></label>
    </div>

