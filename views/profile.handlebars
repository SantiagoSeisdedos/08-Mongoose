<h1>Perfil</h1>

<div id="profileContainer">

  {{! LEFT DATA }}
  <div id="profileInfo">

    <div>
      <label for="name">Nombre: <span id="name"></span></label>
    </div>

    <div>
      <label for="lastName">Apellido: <span id="lastName"></span></label>
    </div>

    <div>
      <label for="email">Email: <span id="email"></span></label>
    </div>

    <div>
      <label for="rol">Rol: <span id="rol"></span></label>
    </div>
  </div>

  {{! AVATAR }}
  <div id="imageContainer">
    <div>
      <label for="profilePicture">Foto de Perfil:</label>
      <img id="profilePicture" alt="Foto de Perfil" />
    </div>
  </div>

</div>

{{! DOC SECTION }}
<div id="documentsContainer">
  <h2>Documentos</h2>
  <div id="documentsList">

  </div>
</div>

<form id="uploadForm">
  <input type="file" name="files" multiple />
  <button id="uploadButton" type="submit" disabled>Subir Documentos</button>
</form>

<div style="display: flex; width: 100%; gap: 20px;">
  <a id="usersTable" type="button" href="/usersTable" hidden>
    <button type="button">
      Tabla de Usuarios
    </button>
  </a>
  <a type="button">
    <button id="logoutButton" type="button">Logout</button>
  </a>
  <a type="button" href="/editProfile">
    <button id="editProfile" type="button">
      Editar perfil
    </button>
  </a>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="js/profile/profile.js"></script>