<div
  style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; width: 100%;"
>
  <h1 id="productHeader">Listado de Productos</h1>

  <a
    type="button"
    id="checkoutButton"
    style="margin-right: 20px;"
  >
    <button type="button" id="checkoutButton">
      Checkout
    </button>
  </a>
</div>

<div class="product-grid" id="productList"></div>
<form enctype="multipart/form-data">
  <h2>Crear Producto</h2>

  <div>
    <label for="productTitle">Nombre:</label>
    <input required type="text" name="productTitle" id="productTitle" />
  </div>

  <div>
    <label for="productDescription">Descripcion:</label>
    <input
      required
      type="text"
      name="productDescription"
      id="productDescription"
    />
  </div>

  <div>
    <label for="productPrice">Precio: </label>
    <input required type="text" name="productPrice" id="productPrice" />
  </div>

  <div>
    <label for="productCode">Codigo:</label>
    <input required type="text" name="productCode" id="productCode" />
  </div>

  <div>
    <label for="productStatus">Disponible: </label>
    <input type="checkbox" name="productStatus" id="productStatus" />
  </div>

  <div>
    <label for="productStock">Stock:</label>
    <input type="text" name="productStock" id="productStock" />
  </div>

  <div>
    <label for="productCategory">Categoria:</label>
    <input required type="text" name="productCategory" id="productCategory" />
  </div>

  <div>
    <label for="productImage">Imagen:</label>
    <input type="file" name="productImage" id="productImage" accept="image/*" />
  </div>

  <button type="submit">Enviar</button>
</form>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/realTimeProducts.client.js"></script>